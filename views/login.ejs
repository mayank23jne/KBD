// Auto-clear storage on login page load (extra safety)
window.addEventListener('DOMContentLoaded', () => {
    // Clear invalid user data
    const userStorage = localStorage.getItem('last_user');
    if (userStorage) {
        try {
            const user = JSON.parse(userStorage);
            if (!user?.id || user.id === 'guest') {
                localStorage.removeItem('last_user');
            }
        } catch (e) {
            localStorage.removeItem('last_user');
        }
    }
});
</script>

      <script>
      window.addEventListener('DOMContentLoaded', function () {
        // console.log('DOM LOADED');
        let alreadyHandled = false;

        function forceLogout() {
        //   console.log(
        //     'FORCE LOGOUT TRIGGERED, alreadyHandled:',
        //     alreadyHandled,
        //   );
          if (alreadyHandled) return;
          alreadyHandled = true;
          // Make sure LogoutManager exists
          if (
            typeof LogoutManager !== 'undefined' &&
            LogoutManager.handleLogout
          ) {
            LogoutManager.handleLogout();
          } else {
            console.warn('LogoutManager not defined!');
          }
        }

        // console.log('Login back button trap initialized');

        // Make this page the root of history
        history.replaceState({ page: 'login' }, '', location.href);
        history.pushState({ page: 'login' }, '', location.href);

        // Handle back button
        window.addEventListener('popstate', forceLogout);

        // Handle mobile swipe / bfcache restore
        window.addEventListener('pageshow', function (event) {
        //   console.log('pageshow fired, persisted:', event.persisted);
          if (event.persisted) {
            forceLogout();
          }
        });
      });
    </script>

    

