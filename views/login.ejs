    <script>
        window.addEventListener("DOMContentLoaded", () => {
            const userId = '<%= isUser.id %>';
            if (userId) {
                fetch(`api/get-user?id=${btoa(userId)}`)
                    .then(response => response.json())
                    .then(data => {
                        setUserDetails(data);
                    })
                    .catch(error => {
                        console.error('Error fetching user:', error);
                    });
            }
        })
            function showToast(message) {
                const toast = document.getElementById("toast");
                toast.textContent = message;
                toast.classList.add("show");

                setTimeout(() => {
                    toast.classList.remove("show");
                }, 3000);
            }

        function setUserDetails(data) {
            if (!data) return;
            if (data.user_type === "google") {
                const username = document.getElementById("username_text");
                const updateUserInput = document.getElementById("update_user_name");
                username.textContent = data.fullname;
                updateUserInput.value = data.fullname;
            } else {
                const actionBtn = document.querySelector(".action-btn");
                actionBtn.style.display = "none";
            }
        }

        function handleQuestionTypeChange() {
            const questionType = document.querySelector("input[name='question_type']:checked").value;
            const hindiRadio = document.querySelector('input[name="language"][value="hi"]');
            const englishRadio = document.querySelector('input[name="language"][value="en"]');

            if (questionType === "Chhahdhala") {
                hindiRadio.checked = true;
                hindiRadio.disabled = false;
                englishRadio.disabled = true;
            } else {
                englishRadio.checked = true;
                hindiRadio.disabled = false;
                englishRadio.disabled = false;
            }

            changeLanguage();
        }

        function changeLanguage() {
            const lang = document.querySelector('input[name="language"]:checked').value;
            const header = document.getElementById("header");
            header.textContent = lang === "hi" ? "‡§ï‡•å‡§® ‡§¨‡§®‡•á‡§ó‡§æ ‡§ß‡§∞‡•ç‡§Æ ‡§∂‡§ø‡§∞‡•ã‡§Æ‡§£‡§ø ‡§Æ‡•á‡§Ç ‡§Ü‡§™‡§ï‡§æ ‡§∏‡•ç‡§µ‡§æ‡§ó‡§§ ‡§π‡•à" : "Welcome to KBDS";
        }
        changeLanguage();

        function toggleUserType(type) {
            const credentialsContainer = document.getElementById("credentials-container");
            const isShortScreen = window.matchMedia("(max-height: 600px)").matches;
            const isUser = '<%= isUser.username %>';
            if (type === 'guest' || isUser) {
                credentialsContainer.style.display = "none";
            } else {
                credentialsContainer.style.display = isShortScreen ? "flex" : "block";

            }
        }

        function showSignupForm() {
            document.getElementById("login-form").style.display = "none";
            document.getElementById("signup-form").style.display = "block";
            // document.getElementById("user-type").style.display = "none";
              // ‚ùå Guest user hide
            const guest = document.getElementById("guest-option");
            if (guest) guest.style.display = "none";
        }

        function showLoginForm() {
            document.getElementById("signup-form").style.display = "none";
            document.getElementById("login-form").style.display = "block";
            const guest = document.getElementById("guest-option");
                if (guest) guest.style.display = "block";
            const isShortScreen = window.matchMedia("(max-height: 600px)").matches;
            const user_type_div = document.getElementById('user-type');
            user_type_div.style.display = isShortScreen ? "flex" : "block";
        }
    </script>
    
