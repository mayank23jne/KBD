      #question_type {
        width: 60%;
      }

      #language-select {
        width: 50%;
      }
      /* PLAY BUTTON */
      #btn-login {
        left: 0% !important;
        transform: none !important;
      }

      button.login {
        background: linear-gradient(135deg, #5762f8, #ff58fa);
        color: white;
